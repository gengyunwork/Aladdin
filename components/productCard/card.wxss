/* components/productCard/card.wxss */

.showImg {
  width: 240rpx;
  height: 200rpx;
  position: relative;
  float: left;
}

.showPlace {
  width: 100%;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.2);
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.showPlace text {
  color: white;
}

.showTitle {
  float: left;
  width: 410rpx;
  height: 70rpx;
  margin-left: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  line-height: 35rpx;
}

.showToast {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  width: 433rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
  float: left;
}

.showKey {
  float: left;
  margin-left: 10rpx;
  margin-top: 12rpx;
  width: 420rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
}

.key {
  width: 110rpx;
  height: 30rpx;
  background: #6fc7fa;
  border-radius: 6rpx;
  color: white;
  font-size: 24rpx;
  text-align: center;
  line-height: 32rpx;
  margin-right: 20rpx;
}

.showMan1, .showMan2, .showMan3, .showMan4, .showMan5 {
  margin-left: 10rpx;
  margin-top: 20rpx;
  font-size: 20rpx;
  width: 426rpx;
  color: #999;
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-end;
  justify-content: space-between;
}

.showMan2 {
  align-items: baseline;
}

.showMan3 {
  padding: 10rpx;
}

.showMan4 {
  font-size: 28rpx;
  justify-content: flex-start;
  align-items: baseline;
  padding-top: 40rpx;
  padding-left: 10rpx;
}

.type0, .type1, .type2 {
  width: 140rpx;
  height: 42rpx;
  line-height: 42rpx;
  color: #cc5af7;
  border: 1rpx solid #cc5af7;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-left: 302rpx;
}

.type1 {
  color: #999;
  border: 1rpx solid #999;
}

.type2 {
  color: #f00;
  border: 1rpx solid #f00;
}

.showBtn {
  width: 160rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border: 1rpx solid #9f34da;
  color: #9f34da;
  border-radius: 6rpx;
}

.showMan3 text {
  font-size: 28rpx;
  color: #e71827;
}
