<!-- 顶部页面导航栏 -->
<base-top-bar isBack="{{fasle}}" title="分类"></base-top-bar>
<view class="cu-bar search bg-white">
  <view class="search-form radius">
    <text class="cuIcon-search"></text>
    <input type="text" confirm-type="search" value="{{searchString}}" bindchange="searchChange"></input>
  </view>
</view>
<!-- 垂直导航 -->
<view class="VerticalBox">
  <!-- 左侧导航栏 -->
  <scroll-view class="VerticalNav nav" scroll-y scroll-with-animation scroll-top="{{VerticalNavTop}}" style="height:calc(100vh - 375rpx)">
    <view class="cu-item {{index==TabCur?'text-mauve cur':''}}" wx:for="{{list}}" wx:key bindtap='tabSelect' data-id="{{index}}">
      Tab-{{item.name}}
    </view>
  </scroll-view>
  <!-- 右侧内容界面 -->
  <scroll-view class="VerticalMain" scroll-y scroll-with-animation style="height:calc(100vh - 375rpx)" scroll-into-view="main-{{MainCur}}" bindscroll="VerticalMain">
    <!--  -->
    <view class="padding-top padding-lr" wx:for="{{list}}" wx:key id="main-{{index}}">
      <view class='cu-bar bg-white'>
        <view class='action response padding-top-xs padding-bottom-xs' style="height:240rpx;">
          <view class="bg-img bg-mask response flex align-center justify-center" style="height:100%;background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg');">
            <view class="text-xl text-white">
              <view>
                Tab-{{item.name}}
              </view>
            </view>
          </view>
        </view>
      </view>
      <!-- 分割栏标题 -->
      <view class="tab-title text-center bg-white">
        <text style="z-index:999;" class="bg-white padding-left padding-right"> Tab-{{item.name}}</text>
      </view>
      <!-- 卡片按钮导航 -->
      <view class="cu-list menu-avatar grid col-4 padding-top-sm">

        <view wx:for="{{item.tourList}}" wx:for-item="card" class="flex-direction text-center" style="height:140rpx;">
          <view class="cu-avatar radius" style="background-image:url({{card.imgUrl}});"></view>
          <view>
            {{card.text}}
          </view>
        </view>
      </view>

    </view>
    <!--  -->
  </scroll-view>
</view>