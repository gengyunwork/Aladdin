/* pages/home/travelNote/write/write.wxss */

.edit-box{
  width: 100vw;
  height: calc(100vh - 158rpx);
  background: white;
  padding: 22rpx;
  position: fixed;
  top:158rpx;
  left:-100vw;
  transition: left .5s;
  z-index:999;
}

.edit-box.show{
  left:0;
}
.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}

.edit-box .cu-form-group .picker{
  height: 60rpx;
  line-height: 60rpx;
  text-align:left;
}
.edit-box .cu-form-group picker::after{
  line-height: 60rpx;
}