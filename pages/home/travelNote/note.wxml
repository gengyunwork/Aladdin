<!-- 顶部页面导航栏 -->
<base-top-bar title="游记攻略"></base-top-bar>
<!-- 搜索条 -->
<view class="cu-bar search bg-white">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" confirm-type="search" value="{{searchString}}" bindinput="searchInput"></input>
  </view>
  <view class="action">
    <button class="cu-btn bg-purple shadow-blur radius " bindtap="writeNote">发布</button>
  </view>
</view>
<!-- 轮播图 -->
<swiper class="card-swiper note-swiper bg-white" circular="true" autoplay="true" interval="5000" duration="500" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperList}}" wx:key>
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
    </view>
  </swiper-item>
</swiper>
<!-- 游记卡片 -->
<view class="flex bg-white p-tb-xs p-lr-sm" wx:for="{{cardList}}">
  <view class="flex-treble  padding-sm">
    <!-- 标题 -->
    <view class="margin-bottom-xs">{{item.title}}</view>
    <!-- 用户头像及昵称 -->
    <view class=" margin-bottom-xs">
      <view class="cu-avatar sm round margin-right-xs" style="background-image:url({{item.avatar}});"></view>
      <text>{{item.alias}}</text>
    </view>
    <!-- 点赞数 浏览量 发布时间 -->
    <view class="grid col-2 flex align-center text-gray" style="font-size:22rpx;">
      <view>
        <text class="cuIcon-appreciate lg  margin-right-xs"></text>
        <text>{{item.appreciate}}</text>
        <text class="cuIcon-attention  margin-lr-xs"></text>
        <text>{{item.attention}}</text>
      </view>
      <text>发布时间:{{item.create_at}}</text>
    </view>
  </view>
  <view class="flex-twice  padding-tb-sm padding-lr-xs shadow">
    <image class="response h-100  radius" src="{{item.poster}}"></image>
  </view>
</view>