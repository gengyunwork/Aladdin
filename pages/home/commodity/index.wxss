.card {
  width: 520rpx;
  height: 213rpx;
  border: 1rpx solid rgba(221, 221, 221, 1);
  margin-right: 30rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
}

.cardName, .cardPs {
  font-size: 32rpx;
  color: #000;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cardPs {
  color: #666;
  font-size: 28rpx;
  width: 100%;
}

.cardOthers {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-end;
}

.bar {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.submit {
  height: 52rpx;
  background: rgba(159, 52, 218, 1);
  border-radius: 26rpx;
  margin: 30rpx;
}

.toastBtn {
  height: 72rpx;
  width: 100%;
  text-align: center;
  line-height: 72rpx;
  font-size: 32rpx;
  color: #9828d7;
}

.toastBtn2 {
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 3rpx solid rgba(155, 48, 214, 1);
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  width: 360rpx;
  color: #9b30d6;
  font-size: 36rpx;
}
