/* pages/home/commodity/index.wxss */

#root {
  background: white;
}

#root .screen-swiper {
  min-height: 260rpx;
}

#root [class*="cuIcon-"] {
  font-size: 40rpx;
}

#root [class*="cuIcon-attentionfill"] {
  font-size: 18rpx;
}

#root .cu-dialog {
  width: 540rpx;
}

.cu-modal .padding-xl {
  padding: 20rpx 20rpx 0 20rpx;
}

.cu-modal .cu-bar {
  min-height: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
}

.ensureList {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-content: flex-start;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid rgba(221, 221, 221, 1);
  height: 52rpx;
  line-height: 42rpx;
  font-size: 28rpx;
}

.ensureItem {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.com-msg, .com-address, .com-details, .com-note {
  border-bottom: 1rpx solid rgba(221, 221, 221, 1);
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.com-name {
  font-size: 28rpx;
  line-height: 42rpx;
  height: 42rpx;
  font-weight: 800;
}

.com-ps {
  font-size: 24rpx;
  line-height: 36rpx;
}

.com-others, .com-address {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  /* margin-top: 20rpx; */
}

.com-others {
  margin-top: 20rpx;
}

.com-address {
  color: #666;
  font-size: 22rpx;
  height: 38rpx;
  line-height: 38rpx;
}

.com-price {
  /* display: flex;flex-flow: row nowrap;justify-content: flex-start;align-items: center; */
}

.com-price1 {
  font-size: 32rpx;
  color: #e71515;
  line-height: 42rpx;
  height: 42rpx;
}

.com-price2 {
  font-size: 24rpx;
  line-height: 42rpx;
  font-weight: 600;
  height: 42rpx;
  margin-left: 32rpx;
}

.com-num {
  color: #999;
  font-size: 22rpx;
}

.com-details-title, .com-note-title {
  font-size: 32rpx;
  line-height: 58rpx;
  height: 58rpx;
}

.com-details-title text, .com-note-title text {
  border-bottom: 1rpx solid #9126cd;
  padding-bottom: 10rpx;
}

.com-details-content {
  padding-bottom: 20rpx;
}

.scroll-box {
  white-space: nowrap;
  height: 213rpx;
}

.card-box {
  display: inline-block;
  margin-top: 22rpx;
}

