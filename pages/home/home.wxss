.headImg {
  width: 100%;
  height: 350rpx;
  background-color: purple;
}

image {
  width: 100%;
  height: 100%;
}

/* 地址 */

.address {
  height: 56rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 60rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 42rpx;
  letter-spacing: 5rpx;
  color: #fff;
  margin-left: 49rpx;
}

.place {
  font-size: 27rpx;
}

/* 搜素 */

.searchBar {
  margin-top: 34rpx;
  width: 92%;
  height: 64rpx;
  margin-left: 4%;
  border-radius: 27rpx;
}

/* 選擇卡 */

.chooseBar {
  width: 100%;
  height: 161rpx;
  margin-top: -65rpx;
}

.chooseItem {
  width: 20%;
  box-sizing: border-box;
  float: left;
  height: 161rpx;
  text-align: center;
}

.chooseBody {
  width: 80rpx;
  height: 80rpx;
  margin: auto;
  margin-top: 22rpx;
}

.chooseFooter {
  margin-top: 15rpx;
  color: #333;
  font-size: 28rpx;
}

/* 广告 */

.adBar {
  margin-top: 30rpx;
  width: 92%;
  margin-left: 4%;
  height: 190rpx;
}

/* 超值优惠 */

.cheapBar, .vipBar {
  padding: 20rpx 30rpx;
  width: 100%;
  height: 400rpx;
}

.cheapHead, .vipHead {
  width: 100%;
  height: 25rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 1rpx;
}

.cheapName, .vipName {
  height: 25rpx;
  font-size: 28rpx;
  line-height: 25rpx;
  color: #333;
  border-left: 2rpx solid #a439e0;
  padding-left: 18rpx;
}

.vipName {
  border-left: 2rpx solid #8640ea;
}

.cheapMore {
  margin-left: 465rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  color: #999;
}

.cheapList {
  margin-top: 40rpx;
}

.cheapItem {
  float: left;
  position: relative;
  margin-bottom: 5rpx;
}

.cheapItem text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  z-index: 2;
  position: absolute;
  top: 131rpx;
  left: 11rpx;
  width: 100%;
  color: white;
  font-size: 20rpx;
}

.first {
  width: 49%;
  margin-right: 1%;
  height: 160rpx;
}

.second {
  width: 32.3%;
  margin-right: 1%;
  height: 160rpx;
}

.show {
  display: block;
}

.noshow {
  display: none;
}

.cheapShow {
  width: 120rpx;
  height: 30rpx;
  background-image: linear-gradient(#fa70e9, #fa70e9), linear-gradient(#28b2c2, #28b2c2);
  background-blend-mode: normal, normal;
  border-radius: 6rpx;
  opacity: 0.6;
  position: absolute;
  z-index: 2;
  line-height: 30rpx;
  letter-spacing: 1rpx;
  color: #fff;
  padding: 0;
}

