/* pages/user/message/message.wxss */
.msgBar {
  width: 100%;
  height: 157rpx;
  background: white;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}
.msgFirst {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.msgTitle {
  font-size: 32rpx;
  font-weight: 600;
}
.msgDate {
  font-size: 24rpx;
}
.msgToast {
   word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  margin-top: 5rpx;
}