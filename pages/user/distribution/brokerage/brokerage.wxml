<!--pages/user/distribution/brokerage/brokerage.wxml-->
<base-top-bar title="我的佣金"></base-top-bar>
<view class="brokerage-top-card text-white">
  <image src="../../../../images/distribution/brokerage.png"></image>
  <view style="font-size:54rpx;z-index:11;">500.00</view>
  <view style="font-size:40rpx;z-index:11;">
    总佣金（元）
  </view>
  <view class="btn">提现</view>
</view>
<view class="bg-white grid col-2 padding-sm">
  <view>
    <text class="text-sm">可提现佣金（元）</text>
    <text style="color:#EF8139;">9999</text>
  </view>
  <view class="text-right">
    <text class="text-sm">冻结佣金（元）</text>
    <text style="color:#EF8139;">9999</text>
  </view>
</view>

<!-- 没有佣金 -->
<view class="text-center padding margin-top" style="min-height:60vh;" hidden="{{brokerageData.length}} == 0">
  <image src="../../../../images/distribution/brokeragenone.png" style="width:290rpx; height:260rpx;"></image>
  <view class="padding">目前尚无佣金</view>
  <image src="../../../../images/distribution/brokeragebtn.png" style="width:300rpx; height:76rpx;"></image>
</view>

<!-- 消费记录 -->
<view class="brokerage-card bg-white" style="border-top:8rpx solid #f5f5f5;" wx:for="{{brokerageData}}" wx:key="item.id">
  <view class="flex justify-between padding-sm solid-bottom">
    <text>{{item.alias}}</text>
    <view>
      <text style="color:#DDD;" hidden="{{item.state == 0}}">以消费</text>
      <text style="color:#FFBC02;" hidden="{{item.state == 1}}">待消费</text>
    </view>
  </view>
  <view class="flex justify-between padding-sm">
    <view>
      <view>
        <text class="text-grey">购买时间：</text>
        <text>{{item.purchaseTime}}</text>
      </view>
      <view class="text-grey">
        有效时间：{{item.timeout}}
      </view>
    </view>
    <view>
      <text class="text-grey">佣金金额：</text>
      <text>{{item.price}}</text>
    </view>
  </view>
</view>